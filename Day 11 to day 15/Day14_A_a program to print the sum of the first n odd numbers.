#include <stdio.h>

int main() {
    int n, i, sum = 0;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Loop through first n odd numbers
    for(i = 1; i <= n; i++) {
        sum += (2 * i - 1); // formula for i-th odd number
    }

    printf("Sum of the first %d odd numbers = %d\n", n, sum);

    return 0;
}
