#include <stdio.h>

int main() {
int n;
printf("Enter size of array (n): ");
scanf("%d", &n);

```
int arr[n-1]; // array will have n-1 elements
printf("Enter %d elements (0 to %d, one missing): ", n-1, n);
int sum = 0;
for(int i = 0; i < n-1; i++) {
    scanf("%d", &arr[i]);
    sum += arr[i];
}

int total = n * (n + 1) / 2;  // sum of 0 to n
int missing = total - sum;

printf("Missing number is: %d\n", missing);

return 0;
```

}
