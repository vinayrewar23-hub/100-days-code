#include <stdio.h>

int main() {
    FILE *fp;
    char text[200];

    // Open the file in append mode
    fp = fopen("info.txt", "a");

    if (fp == NULL) {
        printf("Error: Could not open file.\n");
        return 1;
    }

    printf("Enter a line to append: ");
    fgets(text, sizeof(text), stdin);   // take input from the user

    // Append the text to file
    fputs(text, fp);

    printf("Text appended successfully!\n");

    fclose(fp);

    return 0;
}
