#include <stdio.h>
#include <string.h>

int main() {
    char name[100];
    printf("Enter your full name: ");
    fgets(name, sizeof(name), stdin);

    // Remove potential trailing newline
    size_t len = strlen(name);
    if (len > 0 && name[len-1] == '\n')
        name[len-1] = '\0';

    printf("Initials: ");

    // Print the first character if itâ€™s not a space
    if (name[0] != ' ')
        printf("%c", name[0]);

    // Print character if the previous character is a space
    for (int i = 1; name[i] != '\0'; i++) {
        if (name[i-1] == ' ' && name[i] != ' ')
            printf("%c", name[i]);
    }
    printf("\n");

    return 0;
}
