#include <stdio.h>
#include <string.h>
#include <ctype.h>

// Function to reverse a part of a string in place
void reverse(char *str, int start, int end) {
    while (start < end) {
        char temp = str[start];
        str[start] = str[end];
        str[end] = temp;
        start++;
        end--;
    }
}

int main() {
    char sentence[1000];
    printf("Enter a sentence: ");
    fgets(sentence, sizeof(sentence), stdin);

    // Remove potential trailing newline
    size_t len = strlen(sentence);
    if (len > 0 && sentence[len-1] == '\n') {
        sentence[len-1] = '\0';
    }

    int i = 0;
    while (sentence[i]) {
        // Skip spaces
        if (isspace(sentence[i])) {
            i++;
            continue;
        }
        // Find the start of a word
        int start = i;
        // Move 'i' until the end of the word
        while (sentence[i] && !isspace(sentence[i])) {
            i++;
        }
        int end = i - 1;
        // Reverse the current word
        reverse(sentence, start, end);
    }

    printf("Sentence with each word reversed:\n%s\n", sentence);
    return 0;
}
