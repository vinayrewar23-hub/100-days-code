#include <stdio.h>
#include <math.h>

int main() {
    int num, firstDigit, lastDigit, digits, swappedNum;

    printf("Enter a number: ");
    scanf("%d", &num);

    lastDigit = num % 10;  // Get last digit

    // Count number of digits
    int temp = num;
    digits = 0;
    while (temp > 0) {
        temp = temp / 10;
        digits++;
    }

    // Get first digit
    firstDigit = num / (int)pow(10, digits - 1);

    // Remove first and last digit
    int middle = num % (int)pow(10, digits - 1);  // Remove first digit
    middle = middle / 10;                         // Remove last digit

    // Form the swapped number
    swappedNum = lastDigit * (int)pow(10, digits - 1) + middle * 10 + firstDigit;

    printf("Number after swapping first and last digit: %d\n", swappedNum);

    return 0;
}
