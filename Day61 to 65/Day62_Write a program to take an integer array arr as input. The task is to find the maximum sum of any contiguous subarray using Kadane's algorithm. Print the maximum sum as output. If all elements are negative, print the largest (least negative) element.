#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for(int i = 0; i < n; i++)
        scanf("%d", &arr[i]);

    int currentSum = arr[0];
    int maxSum = arr[0];

    for(int i = 1; i < n; i++) {
        // start new subarray or continue
        if (currentSum + arr[i] < arr[i])
            currentSum = arr[i];
        else
            currentSum += arr[i];

        // update maximum
        if (currentSum > maxSum)
            maxSum = currentSum;
    }

    printf("%d", maxSum);
    return 0;
}
