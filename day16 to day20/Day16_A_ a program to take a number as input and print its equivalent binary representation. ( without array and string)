#include <stdio.h>

int main() {
    unsigned int n;
    unsigned int mask;

    printf("Enter a number: ");
    scanf("%u", &n);

    // Find the highest power of 2 less than or equal to n
    mask = 1 << (sizeof(unsigned int) * 8 - 1); // start from MSB

    // Skip leading zeros
    int started = 0; // flag to skip leading zeros
    for (; mask > 0; mask >>= 1) {
        if (n & mask) {
            printf("1");
            started = 1;
        } else if (started) {
            printf("0");
        }
    }

    // If number is 0
    if (!started) {
        printf("0");
    }

    printf("\n");
    return 0;
}
