#include <stdio.h>

int main() {
    long long num, onesComplement = 0, place = 1;
    int digit;

    printf("Enter a binary number: ");
    scanf("%lld", &num);

    while (num > 0) {
        digit = num % 10;          // extract last digit
        if (digit == 0)
            digit = 1;
        else
            digit = 0;

        onesComplement += digit * place;  // build new number
        place *= 10;
        num /= 10;
    }

    printf("1's complement = %lld\n", onesComplement);
    return 0;
}
