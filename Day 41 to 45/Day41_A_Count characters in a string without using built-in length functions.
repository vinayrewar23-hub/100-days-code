#include <stdio.h>

int main() {
    char str[100];
    int count = 0, i = 0;

    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);

    // Count characters until null character '\0'
    while (str[i] != '\0') {
        count++;
        i++;
    }

    // If string was taken using fgets, it also stores '\n'
    // So optional: subtract newline if not required
    if (count > 0 && str[count - 1] == '\n') {
        count--;  
    }

    printf("Number of characters: %d\n", count);

    return 0;
}
